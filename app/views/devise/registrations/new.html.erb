<section>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, html: {class: "user-form"})) do |f| %>
  <%= devise_error_messages! %>

  <input type="hidden" id="profile-src" name="tutor[profile_src]">


  <div class="field form-group">
    <%= f.label t("email_address") %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label t("f_name") %><br />
    <%= f.text_field :f_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label t("l_name") %><br />
    <%= f.text_field :l_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field form-group">
    <label for="language-select"><%=t("language")%></label>
    <select name="tutor[language]" class="form-control" id="language-select">
      <%= options_for_select([
        [t("english"), "en"],
        [t("spanish"), "es"]
        ]) %>
    </select>

    <small id="emailHelp" class="form-text text-muted orange"><%=t("language_warning")%></small>
  </div>

  <div class="form-group">
    <label for="about"><%=t("about_you")%></label>
    <textarea name="tutor[about]" class="form-control" id="about" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="profile-src-uploader"><%=t("profile_picture")%></label>
    <div class="upload-preview"></div>

    <div><div class="uploader"></div></div>

    <small id="fileHelp" class="form-text text-muted">Click to upload a profile picture.</small>

  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

<% end %>
</section>